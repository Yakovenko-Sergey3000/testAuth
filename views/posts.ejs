<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <title><%=title%></title>
</head>
<body>
    <%- include('./partials/header.ejs') %>
    

   

    <div class="container">
        <% if(posts.length > 0) { %>
           
            <div class="col">
                <% posts.forEach((i) => { %>
                
                    <div class="card mt-5 mx-auto" style="width: 40rem;">
                       
                        <img class="card-img-top" src="<%=i.img_url%>" alt="<%=i.text%>">
                        
                        <div class="card-body">
                            
                          <p class="card-text text-justify"><%=i.text%></p>
                        </div>
                      </div>
                <% }); %>
            </div>  
           
            <% } else { %>
                <h3>Don't posts</h3>
          
            
        <% }  %>  
        
       
    </div>
    
</body>
</html>