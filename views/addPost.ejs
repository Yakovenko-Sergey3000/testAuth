<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <title><%=title%></title>
</head>
<body>
    <%- include('./partials/header.ejs') %>

    <div class="page-bg addPost">
        <div class="container">
            <h1 class="addPostTitle">Add Post</h1>
            <form  action="/post/add" method="POST" enctype="multipart/form-data">
                 <div class="col-sm-4">
                     <input type="text" class="form-control form-control-lg" id="colFormLabelLg" placeholder="Enter title..." name="title">  
                 </div>
                 <div class="col-sm-4">
                     <textarea type="text" class="form-control form-control-lg" id="colFormLabelLg" placeholder="Enter text..." name="text" rows="7"></textarea> 
                 </div>
                 <div class="col">
                     <label class="fake-btn-chooce" for="inputFIle">Add picture</label>
                     <span class="inputFileText">Picture not selected</span>
                     <input id="inputFIle" type="file" class="" name="url" accept="image/jpeg,image/png" value="/img/post-img" aria-describedby="inputGroupFileAddon04">
                 </div>

                 <input type="hidden" value="<%=id%>" name="id">
     
                 <div class="col">
                     <button class="btn btn-dark col-sm-2" type="submit">Send</button>
                 </div>
                 
                
            </form>
         </div>
         
    </div>


    <%- include('./partials/footer.ejs') %>

</body>
</html>